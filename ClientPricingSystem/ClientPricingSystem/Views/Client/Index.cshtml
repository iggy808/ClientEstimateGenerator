@using ClientPricingSystem.Core.Dtos
@model ClientDto

@{
    ViewBag.Title = "Clients";
}

@section scripts
{
}

<div class="indexContainer">
    <p>
        @using (Html.BeginForm("Search", "Client", FormMethod.Post))
        {
            <div class="btn-group">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0 m-1" type="submit">Search</button>
                <!-- Button trigger modal -->
                <input type="button" value="Create New Client" href="#" data-bs-toggle="modal" data-bs-target="#newClientModal" class="btn btn-primary ml-5" />
            </div>
        }

    

    </p>

    <table class="table table-success table-responsive table-hover table-striped rounded-3 overflow-hidden">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>MarkupRate</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Clients is not null)
            {
                @foreach (var entry in Model.Clients)
                {
                    <tr>
                        <td>@entry.Name</td>
                        <td>@entry.Address</td>
                        <td>@entry.MarkupRate</td>

                        <td>  
                            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |  
                                @Html.ActionLink("Details", "Details", new { id=item.Id }) |  
                                @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@  
  
                            <a href="javascript:void(0);" class="anchorDetail"  data-id="@entry.Id">Details</a>  
                        </td>  

                    </tr>

                }
            }
        </tbody>
    </table>
</div>
<!-- Modal -->
<div class="modal" id="newClientModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Create", "Client", FormMethod.Post))
                {
                    <span>@Html.LabelFor(m => m.Name)</span> @Html.TextBoxFor(m => m.Name) <br />
                    <span>@Html.LabelFor(m => m.Address)</span> @Html.TextBoxFor(m => m.Address)<br />
                    <span>@Html.LabelFor(m => m.MarkupRate)</span>@Html.EditorFor(m => m.MarkupRate)<br />

                     <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                }
               
            </div>
            
        </div>
    </div>
</div>