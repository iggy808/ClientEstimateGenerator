@using ClientPricingSystem.Core.Dtos

@{
    ViewBag.Title = "Clients";
}

@section scripts
{
    <script>
        $(() => {
            getClients();

            $('#clientSearch').on('keyup', () => {
                getClients();
            });
        });

        function getClients() {
            $.ajax({
                url: '@Url.Action("Search", "Client")',
                datatype: 'html',
                method: 'GET',
                data: { searchText: $('#clientSearch').val() },
                success: function (res) {
                    console.log("Result" + res);
                    $('#tableClients').html('').html(res);
                },
                error: function (err) {
                    console.log('error');
                    console.log(err);
                }
            })
        }
    </script>
}

<div class="row mt-3">
    <div class="col-12">
        <div class="card rounded-10">
            <div class="card-body">
                <!-- Title and Create Button -->
                <div class="row mt-3">
                    <div class="col-6">
                        <h4 class="card-title"> Clients </h4>
                    </div>
                    <div class="col-6 text-right">
                        <input class="btn btn-primary float-end" type="button" value="Create New Client" href="#" data-bs-toggle="modal" data-bs-target="#newClientModal" />
                    </div>
                </div>
                <!--  Search and Sort -->
                <div class="row mt-3">
                    <div class="col-6"> 
                        <div class="btn-group">
                            <input class="form-control mr-sm-2" type="search" id="clientSearch" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success my-2 my-sm-0 m-1" type="submit">Search</button>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <div class="dropdown">
                                <button class="btn btn-outline-success dropdown-toggle" type="button" id="dropdownSort" data-bs-toggle="dropdown" aria-expanded="false">
                                    Sort by
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownSort">
                                    <li><a class="dropdown-item" href="#">Action</a></li>
                                    <li><a class="dropdown-item" href="#">Another action</a></li>
                                    <li><a class="dropdown-item" href="#">Something else here</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="tableClients"></div>
            </div>
        </div>
    </div>
</div>


